<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.daniel.recyclerviewcardview_test.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:id="@+id/m_recycCardVwSimple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simple RecyclerVw"
        android:textSize="25dp"
        android:onClick="doRecyclerVw"
        android:layout_marginBottom="36dp"/>

    <TextView
        android:id="@+id/m_fragRecyclerVw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment RecyclerVw"
        android:textSize="25dp"
        android:onClick="doFragRecyclerVw"
        android:layout_marginBottom="36dp"/>

    <TextView
        android:id="@+id/m_fragRecyclerVwAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fragment RecyclerVw add btn"
        android:textSize="25dp"
        android:onClick="doFragRecyclerVwAdd"/>
</LinearLayout>
